@page "{id:int}"
@using Application_webOracle.Models
@using Application_webOracle.Business
@inject EmployeeService EmployeeService
@model DeleteEmployeeModel

<h1>Supprimer l'Employé</h1>

@if (Model.Employee != null)
{
    <div>
        <p><strong>EmpNo:</strong> @Model.Employee.EmpNo</p>
        <p><strong>Nom:</strong> @Model.Employee.EName</p>
        <p><strong>Job:</strong> @Model.Employee.Job</p>
        <p><strong>Date d'embauche:</strong> @Model.Employee.HireDate.ToShortDateString()</p>
        <p><strong>Salaire:</strong> @Model.Employee.Sal</p>
        <p><strong>Comm:</strong> @Model.Employee.Comm</p>
        <p><strong>DeptNo:</strong> @Model.Employee.DeptNo</p>
    </div>

    <form method="post">
        <button type="submit" class="btn btn-danger">Supprimer cet employé</button>
    </form>
}
else
{
    <p>Employé non trouvé.</p>
}
